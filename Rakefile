require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('Translate-It', '0.1.2') do |p|
  p.description    = "Translate-It translates a given string from one given language to another using Google APIs."
  p.url            = "https://github.com/pranjaldaga/Translate-It"
  p.author         = "Pranjal Daga"
  p.email          = "pranjaldaga@gmail.com"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.development_dependencies = []
end
